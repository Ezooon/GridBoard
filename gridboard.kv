#:import GridSetup grid_setup.GridSetup
#:import ThemesAssets themes_assets.ThemesAssets
#:import ResourcesScreen resources.ResourcesScreen
#:import PiecesScreen pieces.PiecesScreen
#:import GameScreen game_screen.GameScreen
#:import Die die.Die


<Game>:
    canvas.before:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            size: self.size
            pos: self.pos
            source: 'assets/Sky.png'

    MDScreen:
        name: "welcome_screen"
        Die:
            size: dp(100), dp(100)
            pos: dp(100), dp(100)
            on_face:
                if self.face == 6: root.current = "credit"

        MDRectangleFlatButton:
            text: app.lang_name
            font_size: sp(18)
            right: root.width - dp(10)
            y: dp(10)
            on_release:
                app.next_lang()

        MDBoxLayout:
            orientation: 'vertical'
            spacing: dp(30)
            adaptive_size: True
            pos_hint: {'center_y': 0.5, 'center_x': 0.5}
            MDTextButton:
                text: app.lang['PLAY']
                font_size: sp(30)
                on_release:
                    if root.game_set: root.current = "game_screen"
                    if not root.game_set: root.current = "themes_assets"
            MDRaisedButton:
                text: app.lang['Choose Game']
                font_size: sp(30)
                on_release:
                    root.current = "themes_assets"

    MDScreen:
        name: "new_game"
        back_click_to: 'themes_assets'
        MDTextField:
            id: editing_set_text_field
            hint_text: app.lang["New Game Name"]
            pos: new_game_option.x, new_game_option.top
            size_hint: None, None
            text: app.lang[root.editing_set.name]
            width: new_game_option.width
        MDGridLayout:
            id: new_game_option
            cols: 2
            spacing: dp(30)
            adaptive_size: True
            pos_hint: {'center_y': 0.5, 'center_x': 0.5}
            MDRectangleFlatButton:
                text: app.lang['Grid']
                font_size: sp(18)
                on_release:
                    root.current = 'grid_setup'
            MDRectangleFlatButton:
                text: app.lang['Pieces']
                font_size: sp(18)
                on_release:
                    root.current = 'pieces_screen'
            MDRectangleFlatButton:
                text: app.lang['Positioning']
                font_size: sp(18)
                on_release:
                    root.current = 'edit_game_screen'
            MDRectangleFlatButton:
                text: app.lang['Resources']
                font_size: sp(18)
                on_release:
                    root.current = 'resources'
            MDRaisedButton:
                text: app.lang['Save']
                font_size: sp(18)
                on_release:
                    root.editing_set_save()
            MDRaisedButton:
                text: app.lang['Cancel']
                font_size: sp(18)
                on_release:
                    root.current = 'themes_assets'

    GameScreen:
        id: game_screen
        name: 'game_screen'
        back_click_to: 'welcome_screen'

    GameScreen:
        id: edit_game_screen
        name: 'edit_game_screen'
        back_click_to: 'new_game'
        editing: True

    GridSetup:
        name: 'grid_setup'
        back_click_to: 'new_game'

    ThemesAssets:
        name: 'themes_assets'
        back_click_to: 'welcome_screen'

    ResourcesScreen:
        name: 'resources'
        back_click_to: 'new_game'

    PiecesScreen:
        name: 'pieces_screen'
        back_click_to: 'new_game'

    MDScreen:
        name: "credit"
        ScrollView:
            size_hint: 1, 1
            Label:
                markup: True
                size_hint: None, None
                size: self.texture_size
                text: root.credit
                on_ref_press:
                    root.open_url(args[1])
        MDIconButton:
            icon: "arrow-right"
            top: root.top - dp(10)
            right: root.width - dp(10)
            on_release:
                app.root.current = 'welcome_screen'
